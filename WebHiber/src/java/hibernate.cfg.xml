<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/dbGED</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">admin</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <mapping resource="edu/uv/model/pojos/Unidades.hbm.xml"/>
    <mapping resource="edu/uv/model/pojos/Examenesgenerados.hbm.xml"/>
    <mapping resource="edu/uv/model/pojos/Carrera.hbm.xml"/>
    <mapping resource="edu/uv/model/pojos/Experieciaeducativa.hbm.xml"/>
    <mapping resource="edu/uv/model/pojos/Temas.hbm.xml"/>
    <mapping resource="edu/uv/model/pojos/Academia.hbm.xml"/>
    <mapping resource="edu/uv/model/pojos/Roles.hbm.xml"/>
    <mapping resource="edu/uv/model/pojos/Personal.hbm.xml"/>
    <mapping resource="edu/uv/model/pojos/ExamenesgeneradosHasPregunta.hbm.xml"/>
    <mapping resource="edu/uv/model/pojos/Usuarios.hbm.xml"/>
    <mapping resource="edu/uv/model/pojos/Pregunta.hbm.xml"/>
    <mapping resource="edu/uv/model/pojos/Respuestas.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
